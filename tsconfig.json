{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/styles/*": ["src/styles/*"],
      "@/pages/*": ["src/pages/*"],
      "@/i18n/*": ["src/i18n/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/services/*" : ["src/services/*"],
      "@/config/*" : ["src/config/*"],
    },
    "strict": true
  }
}
