---
import { getPageTranslations } from "@/i18n/i18n";
import { type Locale } from "@/i18n/config";
import { Code, Server, Lightbulb } from "@lucide/astro";

export interface Props {
  locale: Locale;
  className?: string;
}

const { locale, className = "" } = Astro.props;

// Get translations for this component
const { t } = await getPageTranslations(locale, ["common"]);

const skills = [
  { name: "React.js", level: 90 },
  { name: "TypeScript", level: 88 },
  { name: "JavaScript", level: 92 },
  { name: "Next.js", level: 85 },
  { name: "Vue.js", level: 87 },
  { name: "React Native", level: 82 },
  { name: "Astro", level: 80 },
  { name: "Node.js", level: 84 },
  { name: "Python", level: 75 },
  { name: "Java", level: 78 },
  { name: "Tailwind CSS", level: 89 },
  { name: "Cypress", level: 85 },
  { name: "Playwright", level: 80 },
  { name: "Jest", level: 86 },
  { name: "Vitest", level: 82 },
  { name: "Firebase", level: 83 },
  { name: "GitHub Actions", level: 80 },
  { name: "Digital Ocean", level: 79 },
  { name: "Docker", level: 77 },
];
---

<section id="about" class={`py-20 bg-background ${className}`}>
  <div class="container-wide px-6">
    <div class="max-w-6xl mx-auto">
      <!-- Section Title -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
          {t("about.title", {}, "About Me")}
        </h2>
        <div
          class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto"
        >
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- About Content -->
        <div class="space-y-6 text-justify">
          <p class="text-lg text-muted leading-relaxed">
            {
              t(
                "about.description",
                {},
                "I'm a passionate full-stack developer with extensive experience building scalable web and mobile applications. My expertise spans across modern JavaScript frameworks including React.js, Next.js, and Vue.js, complemented by strong TypeScript proficiency for type-safe development."
              )
            }
          </p>

          <p class="text-lg text-muted leading-relaxed">
            {
              t(
                "about.description_2",
                {},
                "With hands-on experience in React Native for mobile development and Node.js for backend solutions, I deliver comprehensive full-stack applications. My technical skills extend to Java for enterprise applications and Cypress for robust end-to-end testing, ensuring high-quality, reliable software."
              )
            }
          </p>

          <p class="text-lg text-muted leading-relaxed">
            {
              t(
                "about.description_3",
                {},
                "I bring strong DevOps and cloud expertise through setting up CI/CD pipelines with GitHub Actions, implementing Firebase for real-time databases and authentication, and configuring cloud infrastructure on Digital Ocean. This comprehensive skill set enables me to handle projects from development to deployment."
              )
            }
          </p>

          <p class="text-lg text-muted leading-relaxed">
            {
              t(
                "about.description_4",
                {},
                "I've enhanced my expertise through specialized courses in Vue.js, AI prompt engineering, and accessibility, demonstrating my commitment to continuous learning. Currently working in a product company, I bring real-world experience while showcasing my passion through the pet projects featured in this portfolio."
              )
            }
          </p>

          <p class="text-lg text-muted leading-relaxed font-medium">
            {
              t(
                "about.philosophy",
                {},
                "I firmly believe that in today's rapidly evolving tech landscape, it's possible to learn any stack or technology. This adaptability mindset drives my approach to development - embracing new challenges and continuously expanding my toolkit to deliver the best solutions for every project."
              )
            }
          </p>

          <div class="flex flex-wrap gap-3 pt-4">
            <span class="badge badge-primary"
              >{t("about.badges.fullstack", {}, "Full-Stack Development")}</span
            >
            <span class="badge badge-secondary"
              >{t("about.badges.mobile", {}, "Mobile Development")}</span
            >
            <span class="badge badge-accent"
              >{t("about.badges.devops", {}, "DevOps & CI/CD")}</span
            >
            <span class="badge badge-outline"
              >{t("about.badges.cloud", {}, "Cloud Infrastructure")}</span
            >
            <span class="badge badge-primary"
              >{t("about.badges.ai", {}, "AI Integration")}</span
            >
            <span class="badge badge-secondary"
              >{
                t("about.badges.accessibility", {}, "Accessibility Expert")
              }</span
            >
            <span class="badge badge-accent"
              >{t("about.badges.adaptability", {}, "Tech Adaptability")}</span
            >
          </div>
        </div>

        <!-- Skills Section -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-semibold text-foreground mb-6">
              {t("about.skills", {}, "Skills & Technologies")}
            </h3>

            <div class="space-y-4">
              {
                skills.map((skill) => (
                  <div class="skill-item">
                    <div class="flex justify-between items-center mb-2">
                      <span class="text-sm font-medium text-foreground">
                        {skill.name}
                      </span>
                      <span class="text-sm text-muted">{skill.level}%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                      <div
                        class="bg-gradient-to-r from-primary-500 to-secondary-500 h-2 rounded-full transition-all duration-700 ease-in-out"
                        style={`width: ${skill.level}%`}
                      />
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>

      <!-- Experience Highlights -->
      <div class="mt-20">
        <h3 class="text-2xl font-semibold text-foreground mb-8 text-center">
          {t("about.experience", {}, "Experience")}
        </h3>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div
              class="w-16 h-16 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <Code class="w-8 h-8 text-primary-600" />
            </div>
            <h4 class="text-lg font-semibold text-foreground mb-2">
              {
                t(
                  "about.experience_cards.frontend.title",
                  {},
                  "Frontend Development"
                )
              }
            </h4>
            <p class="text-muted">
              {
                t(
                  "about.experience_cards.frontend.description",
                  {},
                  "Creating responsive and interactive user interfaces with modern frameworks"
                )
              }
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-16 h-16 bg-secondary-100 dark:bg-secondary-900 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <Server class="w-8 h-8 text-secondary-600" />
            </div>
            <h4 class="text-lg font-semibold text-foreground mb-2">
              {
                t(
                  "about.experience_cards.backend.title",
                  {},
                  "Backend Development"
                )
              }
            </h4>
            <p class="text-muted">
              {
                t(
                  "about.experience_cards.backend.description",
                  {},
                  "Building scalable APIs and server-side applications with robust architecture"
                )
              }
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-16 h-16 bg-accent-100 dark:bg-accent-900 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <Lightbulb class="w-8 h-8 text-accent-600" />
            </div>
            <h4 class="text-lg font-semibold text-foreground mb-2">
              {
                t(
                  "about.experience_cards.problemsolving.title",
                  {},
                  "Problem Solving"
                )
              }
            </h4>
            <p class="text-muted">
              {
                t(
                  "about.experience_cards.problemsolving.description",
                  {},
                  "Analyzing complex challenges and implementing efficient solutions"
                )
              }
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skill-item {
    opacity: 0;
    transform: translateX(-20px);
    animation: slideInLeft 0.6s ease-out forwards;
  }

  .skill-item:nth-child(2) {
    animation-delay: 0.1s;
  }
  .skill-item:nth-child(3) {
    animation-delay: 0.2s;
  }
  .skill-item:nth-child(4) {
    animation-delay: 0.3s;
  }
  .skill-item:nth-child(5) {
    animation-delay: 0.4s;
  }
  .skill-item:nth-child(6) {
    animation-delay: 0.5s;
  }
  .skill-item:nth-child(7) {
    animation-delay: 0.6s;
  }
  .skill-item:nth-child(8) {
    animation-delay: 0.7s;
  }

  @keyframes slideInLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
