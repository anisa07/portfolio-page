---
import { getPageTranslations } from "@/i18n/i18n";
import { type Locale } from "@/i18n/config";
import { Code, Server, Lightbulb } from "@lucide/astro";
import { cn } from "@/lib/utils";

export interface Props {
  locale: Locale;
  className?: string;
}

const { locale, className = "" } = Astro.props;

// Get translations for this component
const { t } = await getPageTranslations(locale, ["common"]);

const skills = [
  { name: "React.js", level: 90 },
  { name: "TypeScript", level: 88 },
  { name: "Next.js", level: 85 },
  { name: "Vue.js", level: 87 },
  { name: "React Native", level: 82 },
  { name: "Node.js", level: 84 },
  { name: "AI Prompt Engineering", level: 85 },
  { name: "RAG Systems", level: 80 },
  { name: "Cypress", level: 85 },
  { name: "Firebase", level: 83 },
  { name: "GitHub Actions", level: 80 },
];
---

<section id="about" class={cn("py-20 bg-background", className)}>
  <div class="container-wide px-6">
    <div class="max-w-6xl mx-auto">
      <!-- Section Title -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
          {t("about.title", {}, "About Me")}
        </h2>
        <div class="w-24 h-1 mx-auto bg-brand-gradient"></div>
      </div>

      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- About Content -->
        <div class="space-y-6 text-justify">
          <p class="text-lg text-muted leading-relaxed">
            {
              t(
                "about.description",
                {},
                "I'm a passionate full-stack developer with extensive experience building scalable web and mobile applications. My expertise spans across modern JavaScript frameworks including React.js, Next.js, and Vue.js, complemented by strong TypeScript proficiency for type-safe development."
              )
            }
          </p>

          <p class="text-lg text-muted leading-relaxed">
            {
              t(
                "about.description_2",
                {},
                "I bring strong DevOps and cloud expertise through CI/CD pipelines, Firebase integration, and cloud infrastructure management. Recently completed AI Prompt Engineering certification, gaining expertise in prompt optimization, RAG systems, AI agents, and working with Hugging Face models and embeddings."
              )
            }
          </p>

          <p class="text-lg text-muted leading-relaxed font-medium">
            {
              t(
                "about.philosophy",
                {},
                "I firmly believe that in today's rapidly evolving tech landscape, it's possible to learn any stack or technology. This adaptability mindset, combined with my AI engineering skills, drives my approach to building intelligent, modern applications."
              )
            }
          </p>

          <div class="flex flex-wrap gap-3 pt-4">
            <span class="badge badge-primary"
              >{t("about.badges.fullstack", {}, "Full-Stack Development")}</span
            >
            <span class="badge badge-secondary"
              >{t("about.badges.mobile", {}, "Mobile Development")}</span
            >
            <span class="badge badge-accent"
              >{t("about.badges.ai", {}, "AI Engineering")}</span
            >
            <span class="badge badge-outline"
              >{t("about.badges.devops", {}, "DevOps & CI/CD")}</span
            >
          </div>
        </div>

        <!-- Skills Section -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-semibold text-foreground mb-6">
              {t("about.skills", {}, "Skills & Technologies")}
            </h3>

            <div class="space-y-4">
              {
                skills.map((skill) => (
                  <div class="skill-item">
                    <div class="flex justify-between items-center mb-2">
                      <span class="text-sm font-medium text-foreground">
                        {skill.name}
                      </span>
                      <span class="text-sm text-muted">{skill.level}%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                      <div
                        class="h-2 rounded-full transition-all duration-700 ease-in-out bg-brand-gradient"
                        style={`width: ${skill.level}%`}
                      />
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>

      <!-- Experience Highlights -->
      <div class="mt-20">
        <h3 class="text-2xl font-semibold text-foreground mb-8 text-center">
          {t("about.experience", {}, "Experience")}
        </h3>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div
              class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <Code class="w-8 h-8 text-accent" />
            </div>
            <h4 class="text-lg font-semibold text-foreground mb-2">
              {
                t(
                  "about.experience_cards.frontend.title",
                  {},
                  "Frontend Development"
                )
              }
            </h4>
            <p class="text-muted">
              {
                t(
                  "about.experience_cards.frontend.description",
                  {},
                  "Creating responsive and interactive user interfaces with modern frameworks"
                )
              }
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <Server class="w-8 h-8 text-accent" />
            </div>
            <h4 class="text-lg font-semibold text-foreground mb-2">
              {
                t(
                  "about.experience_cards.backend.title",
                  {},
                  "Backend Development"
                )
              }
            </h4>
            <p class="text-muted">
              {
                t(
                  "about.experience_cards.backend.description",
                  {},
                  "Building scalable APIs and server-side applications with robust architecture"
                )
              }
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <Lightbulb class="w-8 h-8 text-accent" />
            </div>
            <h4 class="text-lg font-semibold text-foreground mb-2">
              {
                t(
                  "about.experience_cards.problemsolving.title",
                  {},
                  "Problem Solving"
                )
              }
            </h4>
            <p class="text-muted">
              {
                t(
                  "about.experience_cards.problemsolving.description",
                  {},
                  "Analyzing complex challenges and implementing efficient solutions"
                )
              }
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skill-item {
    opacity: 0;
    transform: translateX(-20px);
    animation: slideInLeft 0.6s ease-out forwards;
  }

  .skill-item:nth-child(2) {
    animation-delay: 0.1s;
  }
  .skill-item:nth-child(3) {
    animation-delay: 0.2s;
  }
  .skill-item:nth-child(4) {
    animation-delay: 0.3s;
  }
  .skill-item:nth-child(5) {
    animation-delay: 0.4s;
  }
  .skill-item:nth-child(6) {
    animation-delay: 0.5s;
  }
  .skill-item:nth-child(7) {
    animation-delay: 0.6s;
  }
  .skill-item:nth-child(8) {
    animation-delay: 0.7s;
  }

  @keyframes slideInLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
