---
export interface Props {
  locale: string;
  t: (key: string, params?: any, fallback?: string) => string;
}

const { locale, t } = Astro.props as Props;
---

<section class="py-24 bg-background">
  <div class="container-wide px-6">
    <div class="max-w-2xl mx-auto text-center">
      <div class="w-24 h-1 mx-auto mb-8 bg-brand-gradient"></div>
      <h1 class="text-5xl font-bold text-foreground mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-foreground mb-4">
        {t("not_found.title", {}, "Page not found")}
      </h2>
      <p class="text-muted leading-relaxed text-center mb-8">
        {
          t(
            "not_found.description",
            {},
            "The page you’re looking for doesn’t exist or has been moved."
          )
        }
      </p>
      <a class="btn btn-primary btn-md" href={`/${locale}`}>
        {t("not_found.back_home", {}, "Back to Home")}
      </a>
    </div>
  </div>
</section>
